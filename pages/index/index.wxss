.video-box {
  position: absolute;
  width: 96vw;
  left: 2vw;
  top: 25%;
}
.video-box video{
  width: 100%;
  object-fit: fill;
}


.swiper {
  width: 100%;
}

.law-text-container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: black;
  overflow: hidden;
  z-index: 999;
}

.law-text-view{
  position: absolute;
  top: 0px;
  left: 3%;
  width: 94%;
  height: 100%;
  color: white;
  font-size: 12px;
  overflow-y:auto;
  overflow-x:scroll;
}

.close{
  position: absolute;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 5px;
  height: 40px;
  width: 40px;
  border-radius: 40px;
  background-color: white;
}

.show{
   display:show;
}
.hide{
   display:none;
}